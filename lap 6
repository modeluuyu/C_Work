#include<stdio.h>
int main (){

    int i = 0 ,  j = 0 , x = 0 ; 

    printf("Please enter Nuber : " ) ;
    scanf( "%d", &x ) ;
    for( i = 0 ; i < x ; i++ ) {
        for( j = 0 ; j < x  ; j++ ) {
            if (x %2 == 0 ){
                if(j==i ){
                    printf ("1") ;
                }else{
                    printf ("0") ;
                }//end else
            }else{
                if(j==x-i-1 ){
                    printf ("1") ;
                }else{
                    printf ("0") ;
                }//end else
            }//end else  
        }//end for
        printf( "\n" ) ;
    }//end for 
    return 0 ;
}//end function
